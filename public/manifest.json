{
  "short_name": "cra-webext-ts",
  "name": "Web Extension",
  "description": "Web Extension Boilerplate powered by Create React App (CRA)",
  "version": "0.0.1",
  "manifest_version": 2,
  "browser_action": {
    "default_title": "Extension Popup",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "js": "../src/counter/index.ts",
      "matches": ["*://*/*"]
    }
  ]
}
